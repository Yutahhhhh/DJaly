{
  "name": "djaly",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "docker:start": "colima start djaly --cpu 5 --memory 8",
    "docker:stop": "colima stop djaly",
    "docker:restart": "colima stop djaly && colima start djaly --cpu 5 --memory 8",
    "backend:install": "sh backend/setup.sh",
    "backend:dev": "sh backend/run_backend.sh",
    "db:ui": "duckdb -ui",
    "db:cli": "backend/.venv/bin/harlequin -r db_data/djaly.duckdb",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "release": "./scripts/release.sh",
    "pre-release": "./scripts/verify-release.sh",
    "restore:db": "cp db_data/djaly.duckdb \"$HOME/Library/Application Support/Djaly/djaly.duckdb\"",
    "backup:db": "cp \"$HOME/Library/Application Support/Djaly/djaly.duckdb\" backup/djaly.duckdb",
    "log:watch": "tail -f \"$HOME/Library/Application Support/Djaly/logs/djaly.log\"",
    "local:restore-db": "backend/.venv/bin/python backend/transfer_db.py backup/djaly.duckdb db_data/djaly.duckdb",
    "prod:clean-db": "rm \"$HOME/Library/Application Support/Djaly/djaly.duckdb\"",
    "prod:clean-db-w": "rm \"$HOME/Library/Application Support/Djaly/djaly.duckdb.wal\"",
    "prod:restore-db": "backend/.venv/bin/python backend/transfer_db.py backup/djaly.duckdb \"$HOME/Library/Application Support/Djaly/djaly.duckdb\"",
    "test:backend": "backend/.venv/bin/pytest"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "~2.4.2",
    "@tauri-apps/plugin-http": "^2.5.4",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.555.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-lrc": "^3.2.1",
    "recharts": "2.15.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.8.3",
    "vite": "^6.0.0"
  }
}
